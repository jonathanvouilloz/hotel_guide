---
import '../styles/landing.css';

const features = [
  {
    id: 'wifi',
    title: 'Instant WiFi',
    desc: 'One tap copy. No more spelling out "H0st3l_Gu3st" twenty times a day.',
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/></svg>`,
    color: 'bg-teal-50 text-teal-700'
  },
  {
    id: 'food',
    title: 'Local Gems',
    desc: 'Your personal Google Maps lists for the best Pad Thai and rooftop bars.',
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
    color: 'bg-orange-50 text-orange-700'
  },
  {
    id: 'events',
    title: 'Social Life',
    desc: 'Cooking classes, bar crawls, yoga. Guests sign up instantly.',
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`,
    color: 'bg-purple-50 text-purple-700'
  }
];

const painPoints = ["WiFi Password?", "Where is Laundry?", "Good Pad Thai?", "Rent Scooter?", "Check-out time?", "Taxi Number?", "Atm near?"];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>HostelGuide — The Modern Digital Concierge</title>
    <meta name="description" content="Upgrade your guest experience with a beautiful digital guide." />
  </head>
  <body class="antialiased selection:bg-[var(--color-thai-teal)] selection:text-white overflow-x-hidden">

    <!-- FLOATING NAV -->
    <nav class="fixed top-6 left-1/2 -translate-x-1/2 z-50 glass-panel rounded-full px-6 py-3 flex items-center gap-8 shadow-lg transition-all duration-300 hover:scale-[1.02] max-w-[90vw]">
        <span class="font-display font-bold text-xl tracking-tight text-[var(--color-deep-slate)]">HostelGuide</span>
        <div class="hidden md:flex gap-8 text-sm font-semibold text-[var(--color-cool-grey)]">
            <a href="#how-it-works" class="hover:text-[var(--color-thai-teal)] transition-colors">How it works</a>
            <a href="#features" class="hover:text-[var(--color-thai-teal)] transition-colors">Features</a>
        </div>
        <a href="https://cal.com" class="btn-primary text-xs px-5 py-2.5 shadow-md hover:shadow-lg">Book Demo</a>
    </nav>

    <!-- HERO SECTION -->
    <header class="relative flex flex-col items-center pt-40 md:pt-48 pb-16 overflow-hidden bg-[var(--color-pearl-50)] text-center">

        <!-- Hero Content - Centered -->
        <div class="max-w-4xl mx-auto px-6 mb-16 relative z-10">
            <h1 class="text-[clamp(2.2rem,5vw,3.8rem)] font-display font-bold mb-6 text-balance leading-[1.1] tracking-[-0.02em] text-[var(--color-deep-slate)]">
                your digital guest guide. <br>
                <span class="font-editorial italic font-medium text-[1.15em] tracking-tight text-[var(--color-thai-teal)]">ready in 1 hour.</span>
            </h1>

            <p class="text-xl text-[var(--color-cool-grey)] mb-10 leading-relaxed max-w-2xl mx-auto">
                Stop answering the same questions. Turn your reception desk into a beautiful digital brochure that fits in your guest's pocket.
            </p>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row justify-center gap-4 mb-8">
                <a href="https://cal.com" class="btn-primary text-lg px-8 py-4 shadow-lg shadow-teal-500/25 hover:shadow-xl">Start Free Trial</a>
                <a href="#demo" class="btn-secondary text-lg">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/><polygon points="10,8 16,12 10,16" fill="currentColor"/></svg>
                    See Live Demo
                </a>
            </div>

            <!-- Trust Badges -->
            <div class="trust-badges">
                <span class="trust-badge">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
                    No app download
                </span>
                <span class="trust-badge">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
                    Setup in 24h
                </span>
                <span class="trust-badge">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
                    Cancel anytime
                </span>
            </div>
        </div>

        <!-- HERO VISUAL COMPOSITION -->
        <div class="hero-visual-wrapper">
            <!-- Background decorative rectangles -->
            <div class="hero-bg-rectangle left hidden lg:block"></div>
            <div class="hero-bg-rectangle right hidden lg:block"></div>

            <!-- Main container with text + phone -->
            <div class="hero-main-container">
                <!-- Text content -->
                <div class="hero-main-content">
                    <h3>your local guide</h3>
                    <p>Share your favorite restaurants, bars, and hidden gems with your guests. Google Maps integration makes navigation effortless.</p>
                    <a href="#features" class="learn-more">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M10 8l4 4-4 4"/></svg>
                        Learn more
                    </a>
                </div>

                <!-- Phone mockup -->
                <div class="hero-phone-wrapper">
                    <div class="phone-mockup w-[260px] h-[520px] bg-gray-900 rounded-[2.5rem] p-2.5 shadow-2xl border-4 border-gray-800">
                        <div class="w-full h-full bg-white rounded-[2rem] overflow-hidden relative flex flex-col">
                            <!-- Phone Header -->
                            <div class="bg-[var(--color-thai-teal)] p-4 pt-8 text-white">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h4 class="font-display font-bold text-xl">Stitch Hostel</h4>
                                        <p class="opacity-80 text-xs">Chiang Mai</p>
                                    </div>
                                    <div class="w-8 h-8 bg-white/20 backdrop-blur rounded-full flex items-center justify-center">
                                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/></svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Phone Content -->
                            <div class="flex-1 p-4 space-y-3 bg-gray-50">
                                <div class="bg-white rounded-xl p-3 shadow-sm border border-gray-100">
                                    <div class="flex items-center gap-2 mb-2">
                                        <div class="w-6 h-6 bg-teal-50 text-teal-600 rounded-full flex items-center justify-center">
                                            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/></svg>
                                        </div>
                                        <span class="text-xs font-semibold text-gray-800">WiFi Password</span>
                                    </div>
                                    <div class="bg-gray-50 px-3 py-1.5 rounded-lg font-mono text-sm text-center">ilovehostels</div>
                                </div>

                                <div class="bg-white rounded-xl p-3 shadow-sm border border-gray-100">
                                    <div class="text-xs font-semibold text-gray-800 mb-2">Staff Picks</div>
                                    <div class="flex gap-2">
                                        <div class="flex-1 bg-orange-50 rounded-lg p-2 text-center">
                                            <div class="flex justify-center text-orange-600">
                                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                                            </div>
                                            <div class="text-[9px] font-medium text-gray-600">Food</div>
                                        </div>
                                        <div class="flex-1 bg-purple-50 rounded-lg p-2 text-center">
                                            <div class="flex justify-center text-purple-600">
                                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                                            </div>
                                            <div class="text-[9px] font-medium text-gray-600">Bars</div>
                                        </div>
                                        <div class="flex-1 bg-blue-50 rounded-lg p-2 text-center">
                                            <div class="flex justify-center text-blue-600">
                                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>
                                            </div>
                                            <div class="text-[9px] font-medium text-gray-600">Transport</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="bg-white rounded-xl p-3 shadow-sm border border-gray-100">
                                    <div class="flex items-center justify-between mb-2">
                                        <span class="text-xs font-semibold text-gray-800">Today's Event</span>
                                        <span class="text-[10px] bg-purple-100 text-purple-700 px-2 py-0.5 rounded-full font-medium">5 PM</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center text-purple-600">
                                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                                        </div>
                                        <div>
                                            <div class="text-xs font-semibold">Sunset Yoga</div>
                                            <div class="text-[10px] text-gray-500">Rooftop terrace</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Social Proof -->
        <div class="mt-20 text-center px-6">
            <p class="text-sm text-[var(--color-cool-grey)] mb-6">Trusted by hostels across Southeast Asia</p>
            <div class="logo-bar">
                <div class="logo-placeholder"></div>
                <div class="logo-placeholder"></div>
                <div class="logo-placeholder"></div>
                <div class="logo-placeholder"></div>
                <div class="logo-placeholder hidden sm:block"></div>
                <div class="logo-placeholder hidden md:block"></div>
            </div>
        </div>
    </header>

    <!-- PAIN POINTS MARQUEE -->
    <section class="py-12 bg-white border-y border-gray-100 overflow-hidden relative">
        <div class="marquee-container">
            <div class="marquee-content">
                {[...painPoints, ...painPoints, ...painPoints].map((point) => (
                     <span class="text-3xl font-display font-bold text-gray-400 flex items-center gap-4">
                        {point} <span class="w-2 h-2 rounded-full bg-[var(--color-thai-teal)] opacity-30"></span>
                    </span>
                ))}
            </div>
        </div>
    </section>

    <!-- STICKY PHONE / HOW IT WORKS -->
    <section id="how-it-works" class="py-24 relative bg-[var(--color-pearl-50)]">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-24">
                <h2 class="text-[clamp(2rem,4vw,3.2rem)] title-duo mb-6 text-[var(--color-deep-slate)]">Your digital <span>front desk.</span></h2>
                <p class="text-xl text-[var(--color-cool-grey)]">Everything your guests need, organized in one beautiful link.</p>
            </div>

            <div class="grid lg:grid-cols-2 gap-12 relative">
                <!-- Sticky Phone Wrapper -->
                <div class="hidden lg:flex flex-col justify-center sticky top-24 h-[calc(100vh-6rem)]">
                    <div class="flex justify-center w-full">
                        <div class="relative w-[320px] h-[650px] bg-gray-900 rounded-[3rem] p-3 shadow-2xl border-4 border-gray-800 transform transition-transform duration-700 ease-out hover:scale-[1.02]">
                             <div class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden relative flex flex-col">
                                <!-- Dynamic Content Area -->
                                <div id="phone-content-wifi" class="absolute inset-0 bg-white flex flex-col items-center justify-center p-8 text-center transition-all duration-500 opacity-100 scale-100 z-10">
                                    <div class="w-24 h-24 bg-teal-50 text-teal-600 rounded-full flex items-center justify-center mb-6 shadow-sm">
                                        <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/></svg>
                                    </div>
                                    <h3 class="font-bold text-2xl mb-2 text-gray-800">Network: Hostel_Guest</h3>
                                    <div class="bg-gray-50 px-5 py-3 rounded-xl font-mono text-lg mb-8 border border-gray-100 text-gray-600 select-all">password123</div>
                                    <button class="w-full btn-primary py-3 shadow-none">Copy Password</button>
                                </div>
                                
                                <div id="phone-content-food" class="absolute inset-0 bg-white flex flex-col p-6 transition-all duration-500 opacity-0 scale-95 z-0">
                                    <h3 class="font-bold text-xl mb-6">Staff Picks</h3>
                                    <div class="space-y-4">
                                        <div class="flex gap-4 items-start bg-gray-50 p-4 rounded-xl border border-gray-100">
                                            <div class="w-12 h-12 bg-orange-100 rounded-lg flex-shrink-0 flex items-center justify-center text-orange-500">
                                                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                            </div>
                                            <div>
                                                <div class="font-bold text-gray-800">Khao Soi Mae Sai</div>
                                                <div class="text-xs text-gray-500 mt-1">Best curry noodles in town. 10min walk.</div>
                                            </div>
                                        </div>
                                         <div class="flex gap-4 items-start bg-gray-50 p-4 rounded-xl border border-gray-100">
                                            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex-shrink-0 flex items-center justify-center text-yellow-600">
                                                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                                            </div>
                                            <div>
                                                <div class="font-bold text-gray-800">Zoe in Yellow</div>
                                                <div class="text-xs text-gray-500 mt-1">Legendary reggae bar. Great for meeting people.</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                 <div id="phone-content-events" class="absolute inset-0 bg-white flex flex-col p-6 transition-all duration-500 opacity-0 scale-95 z-0">
                                    <h3 class="font-bold text-xl mb-6">Weekly Events</h3>
                                    <div class="bg-purple-50 p-5 rounded-2xl border border-purple-100 mb-4 shadow-sm">
                                        <div class="flex justify-between items-start mb-3">
                                            <div class="font-bold text-purple-900 text-lg">Cooking Class</div>
                                            <span class="bg-white text-purple-800 text-[10px] px-2 py-1 rounded-md font-bold uppercase tracking-wide border border-purple-100 shadow-sm">Today</span>
                                        </div>
                                        <p class="text-sm text-purple-700 mb-4 leading-relaxed">Learn to cook authentic Pad Thai with Mama Noi right here in the common area.</p>
                                        <button class="w-full bg-purple-600 hover:bg-purple-700 text-white py-3 rounded-xl text-sm font-bold transition-colors shadow-purple-200 shadow-lg">Sign Up Now</button>
                                    </div>
                                    
                                    <div class="bg-white p-4 rounded-xl border border-gray-100 flex items-center gap-4 opacity-60">
                                        <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500">
                                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" /><path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                        </div>
                                        <div class="font-bold text-gray-400">Movie Night</div>
                                    </div>
                                </div>
                             </div>
                        </div>
                    </div>
                </div>

                <!-- Scrollable Features (Natural Scroll) -->
                <div class="flex flex-col py-12 lg:py-0">
                    {features.map((feature) => (
                        <div class="feature-step min-h-[70vh] lg:min-h-screen flex flex-col justify-center px-4 lg:px-12 transition-opacity duration-500" data-target={feature.id}>
                            <div class={`w-20 h-20 rounded-2xl ${feature.color} flex items-center justify-center mb-8 shadow-sm`} set:html={feature.icon}>
                            </div>
                            <h3 class="text-4xl lg:text-5xl font-display font-bold mb-6 text-[var(--color-deep-slate)]">{feature.title}</h3>
                            <p class="text-xl text-[var(--color-cool-grey)] leading-relaxed max-w-lg">{feature.desc}</p>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <!-- BENTO GRID -->
    <section id="features" class="py-32 bg-white relative">
        <div class="max-w-7xl mx-auto px-6">
            <h2 class="text-[clamp(2rem,4vw,3.2rem)] title-duo text-center mb-16 text-[var(--color-deep-slate)]">Packed with <span>value.</span></h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 md:grid-rows-2 gap-6 md:h-[640px]">
                
                <!-- Card 1: Frictionless (Wide) -->
                <div class="bento-card md:col-span-2 relative overflow-hidden bg-gradient-to-br from-gray-50 to-white border border-gray-100 group">
                    <div class="absolute inset-0 bg-[radial-gradient(#cbd5e1_1px,transparent_1px)] [background-size:16px_16px] opacity-20"></div>
                    
                    <div class="relative z-10 p-10 flex flex-col md:flex-row items-center justify-between h-full gap-8">
                        <div class="flex-1 text-center md:text-left">
                            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-50 text-teal-700 text-xs font-bold uppercase tracking-wider mb-4 border border-teal-100">
                                <span class="w-1.5 h-1.5 rounded-full bg-teal-500 animate-pulse"></span>
                                Frictionless
                            </div>
                            <h3 class="text-3xl font-display font-bold mb-3 text-gray-900">The Anti-App Experience</h3>
                            <p class="text-lg text-gray-500 leading-relaxed">Guests are on vacation. They don't want to download <i>another</i> app. We live in the browser, instantly accessible via QR code.</p>
                        </div>

                        <!-- Visual: Browser vs App Store -->
                        <div class="flex-1 w-full max-w-sm relative">
                            <!-- Background glow -->
                            <div class="absolute -inset-4 bg-teal-500/5 rounded-full blur-2xl group-hover:bg-teal-500/10 transition-colors duration-500"></div>
                            
                            <!-- Browser Card -->
                            <div class="relative bg-white rounded-xl shadow-xl border border-gray-100 p-4 transform transition-transform duration-500 group-hover:-translate-y-2 z-20">
                                <div class="flex items-center gap-2 mb-3 border-b border-gray-50 pb-2">
                                    <div class="flex gap-1.5">
                                        <div class="w-2.5 h-2.5 rounded-full bg-red-400"></div>
                                        <div class="w-2.5 h-2.5 rounded-full bg-amber-400"></div>
                                        <div class="w-2.5 h-2.5 rounded-full bg-green-400"></div>
                                    </div>
                                    <div class="bg-gray-100 rounded-md flex-1 h-6 flex items-center px-3 text-[10px] text-gray-400 font-mono">
                                        <svg class="w-3 h-3 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                                        hostel.guide/stitch
