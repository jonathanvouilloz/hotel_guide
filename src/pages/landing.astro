    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Scroll & Phone Logic
            const steps = document.querySelectorAll('.feature-step');
            const phoneScreens: Record<string, HTMLElement | null> = {
                wifi: document.getElementById('phone-content-wifi'),
                food: document.getElementById('phone-content-food'),
                events: document.getElementById('phone-content-events')
            };

            const observerOptions = {
                root: null, // viewport
                rootMargin: '-45% 0px -45% 0px', // Active when element is in the middle of screen
                threshold: 0
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const targetId = entry.target.getAttribute('data-target');
                        if (targetId) updatePhoneScreen(targetId);
                        
                        // Highlight text opacity
                        steps.forEach(s => s.classList.add('opacity-40'));
                        entry.target.classList.remove('opacity-40');
                        entry.target.classList.add('opacity-100');
                    }
                });
            }, observerOptions);

            steps.forEach((step) => {
                step.classList.add('opacity-40'); // Init state
                observer.observe(step);
            });

            function updatePhoneScreen(targetId: string) {
                // Hide all
                Object.values(phoneScreens).forEach(el => {
                    if(el) {
                        el.style.opacity = '0';
                        el.style.transform = 'scale(0.95)';
                        el.style.zIndex = '0';
                    }
                });

                // Show target
                const activeScreen = phoneScreens[targetId];
                if (activeScreen) {
                    activeScreen.style.opacity = '1';
                    activeScreen.style.transform = 'scale(1)';
                    activeScreen.style.zIndex = '10';
                }
            }

            // Chameleon Branding Logic
            const chamChips = document.querySelectorAll('.cham-chip');
            const chamGlow = document.getElementById('cham-glow');
            const chamIcon = document.getElementById('cham-icon');
            const chamBtn = document.getElementById('cham-btn');

            const themes: Record<string, any> = {
                teal: {
                    glow: 'bg-teal-500/10',
                    icon: 'text-teal-400',
                    btn: 'bg-teal-500',
                    shadow: 'shadow-teal-500/20'
                },
                purple: {
                    glow: 'bg-purple-500/10',
                    icon: 'text-purple-400',
                    btn: 'bg-purple-500',
                    shadow: 'shadow-purple-500/20'
                },
                orange: {
                    glow: 'bg-orange-500/10',
                    icon: 'text-orange-400',
                    btn: 'bg-orange-500',
                    shadow: 'shadow-orange-500/20'
                },
                blue: {
                    glow: 'bg-blue-500/10',
                    icon: 'text-blue-400',
                    btn: 'bg-blue-500',
                    shadow: 'shadow-blue-500/20'
                }
            };

            let currentTheme = 'teal';

            chamChips.forEach(chip => {
                chip.addEventListener('click', () => {
                    const color = chip.getAttribute('data-color');
                    if (!color || color === currentTheme) return;

                    // Update Chips UI
                    chamChips.forEach(c => {
                        c.classList.remove('border-white', 'opacity-100', 'scale-110');
                        c.classList.add('border-transparent', 'opacity-50');
                    });
                    chip.classList.remove('border-transparent', 'opacity-50');
                    chip.classList.add('border-white', 'opacity-100', 'scale-110');

                    // Update Theme Elements
                    if (chamGlow && chamIcon && chamBtn) {
                        // Remove old theme classes
                        chamGlow.classList.remove(themes[currentTheme].glow);
                        chamIcon.classList.remove(themes[currentTheme].icon);
                        chamBtn.classList.remove(themes[currentTheme].btn, themes[currentTheme].shadow);

                        // Add new theme classes
                        chamGlow.classList.add(themes[color].glow);
                        chamIcon.classList.add(themes[color].icon);
                        chamBtn.classList.add(themes[color].btn, themes[color].shadow);
                    }
                    
                    currentTheme = color;
                });
            });
        });
    </script>
