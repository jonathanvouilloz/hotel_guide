---
/**
 * SearchBar component - Search input with icon
 */
interface Props {
  placeholder?: string;
  name?: string;
  class?: string;
}

const {
  placeholder = 'Search...',
  name = 'search',
  class: className = ''
} = Astro.props;
---

<div
  class:list={[
    'flex w-full items-center rounded-xl bg-(--color-surface-input) h-12 overflow-hidden',
    'focus-within:ring-2 focus-within:ring-(--color-primary)/50 transition-all',
    className
  ]}
>
  <div class="flex items-center justify-center pl-4 text-(--color-text-secondary)">
    <span class="material-symbols-outlined text-[24px]">search</span>
  </div>
  <input
    type="text"
    name={name}
    placeholder={placeholder}
    class="flex h-full w-full flex-1 border-none bg-transparent px-3 text-base font-medium text-(--color-text) placeholder:text-(--color-text-secondary) focus:ring-0 focus:outline-none"
  />
</div>
