---
/**
 * FilterChip component - Filter buttons for categories
 */
interface Props {
  label: string;
  active?: boolean;
  href?: string;
  class?: string;
}

const { label, active = false, href, class: className = '' } = Astro.props;

const Tag = href ? 'a' : 'button';

const baseClasses = 'flex h-8 shrink-0 items-center justify-center rounded-full px-4 transition-all active:scale-95';

const activeClasses = active
  ? 'bg-white'
  : 'bg-transparent border border-white/20';

const textClasses = active
  ? 'text-gray-900 font-semibold'
  : 'text-white/70 font-medium';
---

<Tag
  href={href}
  class:list={[
    baseClasses,
    activeClasses,
    className
  ]}
>
  <span class:list={['text-sm', textClasses]}>
    {label}
  </span>
</Tag>
